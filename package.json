{
  "name": "bsky-moe",
  "private": true,
  "scripts": {
    "size": "bundlesize --config bundlesize.config.json",
    "lint:js": "eslint '**/*.{js,ts}' --cache",
    "lint": "npm-run-all -p lint:*",
    "prettier:ci": "prettier --check '**/*.{html,js,ts,json,md,yml}'",
    "prettier": "prettier --write '**/*.{html,js,ts,json,md,yml}'",
    "refmt": "refmt --in-place --parse=re --recoverable src/**/*.re",
    "bsb:clean": "bsb -clean-world",
    "bsb:dev": "bsb -make-world -w",
    "bsb:build": "bsb -make-world",
    "webpack:dev": "cross-env NODE_ENV=development TS_NODE_PROJECT='webpack.tsconfig.json' webpack-dev-server --config webpack.dev.ts",
    "webpack:build": "cross-env NODE_ENV=production TS_NODE_PROJECT='webpack.tsconfig.json' webpack --config webpack.prod.ts && yarn size",
    "dev": "npm-run-all -p *:dev",
    "build": "npm-run-all -s bsb:clean bsb:build webpack:build"
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "bs-css": "11.0.0",
    "modern-css-reset": "1.0.4",
    "preact": "10.2.1",
    "reason-react": "0.7.0"
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@babel/plugin-transform-react-jsx": "7.8.3",
    "@babel/preset-modules": "0.1.2",
    "@types/html-webpack-plugin": "3.2.1",
    "@types/script-ext-html-webpack-plugin": "2.1.1",
    "@types/terser-webpack-plugin": "2.2.0",
    "@types/webpack": "4.41.2",
    "@types/webpack-dev-server": "3.9.0",
    "@types/webpack-merge": "4.1.5",
    "@types/webpackbar": "2.6.0",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.17.0",
    "autoprefixer": "9.7.4",
    "babel-loader": "8.0.6",
    "bs-platform": "7.0.1",
    "bundlesize": "0.18.0",
    "clean-webpack-plugin": "3.0.0",
    "closure-webpack-plugin": "2.2.1",
    "cross-env": "6.0.3",
    "css-loader": "3.4.2",
    "cssnano": "4.1.10",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-prettier": "3.1.2",
    "google-closure-compiler": "20200112.0.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "husky": "4.0.10",
    "lint-staged": "10.0.1",
    "npm-run-all": "4.1.5",
    "postcss-loader": "3.0.0",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "reason-cli": "3.3.3-macos-1",
    "script-ext-html-webpack-plugin": "2.1.4",
    "style-loader": "1.1.3",
    "terser-webpack-plugin": "2.3.2",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.7.5",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.1",
    "webpack-merge": "4.2.2",
    "webpackbar": "4.0.0"
  }
}
